# Database Configuration
# Match docker-compose.yml credentials
DATABASE_URL=postgresql://faceswap_user:faceswap_password@localhost:5432/faceswap

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage

# MinIO/S3 Configuration (if using cloud storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=faceswap

# Model Configuration
MODELS_PATH=./models
INSWAPPER_MODEL=inswapper_128.onnx
FACE_ANALYSIS_MODEL=buffalo_l

# Processing Configuration
USE_GPU=true
GPU_DEVICE_ID=0
MAX_IMAGE_SIZE=4096

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Couple Face-Swap API
VERSION=0.1.0

# Security (change in production!)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
